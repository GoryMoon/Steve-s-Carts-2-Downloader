<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Steves Carts 2 Downloader">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
		<classpath>
			<pathelement location="C:\ant-contrib\ant-contrib-1.0b3.jar"/>
	</classpath>
	</taskdef>
	<property name="changed" value="false"/>
	<target name="create_run_jar">
        <jar destfile="C:\Users\Gustaf\Documents\Steve's Carts 2 Downloader/Steve's Carts 2 Downloader.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="gory_moon.stevescarts2.downloader.Main"/>
                <attribute name="Class-Path" value="."/>
            	<attribute name="SplashScreen-Image" value="logo.png"/>
            </manifest>
            <fileset dir="F:/workspace/Steves Carts 2 Downloader/bin"/>
        	<fileset dir="F:/workspace/Steves Carts 2 Downloader/">
        		<include name="src/**"/>
        		<exclude name="src/*.png"/>
        	</fileset>
        </jar>
    	<zip destfile="C:\Users\Gustaf\Dropbox\Public\Steves Carts 2 Downloader\Steve's Carts 2 Downloader.zip" basedir="C:\Users\Gustaf\Documents\Steve's Carts 2 Downloader" />
		<xmlproperty file="src\gory_moon\stevescarts2\downloader\resources\SC2D.xml"/>
    	<loadfile property="file" srcfile="C:\Users\Gustaf\Dropbox\Public\Steves Carts 2 Downloader\SC2DV.txt" >
    		<filterchain>
    			<headfilter/>
    		</filterchain>
    	</loadfile>
		<if>
			<equals arg1=" ${SC2DXML.version.v}" arg2=" ${file}"/>
			<then>
				<echo level="info">Version File already up to date</echo>
				<echo level="error">You didn't forgot to update the SC2D.xml file?</echo>
			</then>
			<else>
				<delete file="C:\Users\Gustaf\Dropbox\Public\Steves Carts 2 Downloader\SC2DV.txt" />
		    	<echo file="C:\Users\Gustaf\Dropbox\Public\Steves Carts 2 Downloader\SC2DV.txt">${SC2DXML.version.v}</echo>
		    	<echo level="info">Version File Updated</echo>
				<echo level="info">New Version Updated successfully</echo>
			</else>
		</if>
    </target>
</project>
